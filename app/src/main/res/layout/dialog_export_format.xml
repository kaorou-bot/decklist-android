<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="导出套牌"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

    <!-- 导出选项 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择导出格式："
        android:textSize="14sp"
        android:paddingBottom="8dp" />

    <!-- MTGO 格式 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MTGO 格式 (.dek)"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnExportMtgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导出" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Arena 格式 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Arena 格式 (.json)"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnExportArena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导出" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 文本格式 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="文本格式 (.txt)"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnExportText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导出" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="@android:color/darker_gray" />

    <!-- 分享选项 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="快速分享："
        android:textSize="14sp"
        android:paddingBottom="8dp" />

    <!-- Moxfield 分享 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Moxfield 链接"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnShareMoxfield"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 复制到剪贴板 -->
    <Button
        android:id="@+id/btnCopyClipboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="复制到剪贴板"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

</LinearLayout>
