<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.carddetail.CardDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="@string/card_details" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <!-- Card Image -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivCardImage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/image_height"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/card_details"
                        tools:src="@tools:sample/backgrounds/scenic" />

                    <!-- 双面牌切换按钮 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFlipCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="查看其他部分"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        app:cornerRadius="8dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card Info -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvCardName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_xlarge"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/margin_small"
                        tools:text="Lightning Bolt" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvManaCost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/margin_small"
                        tools:text="{R}" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvTypeLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="@dimen/margin_small"
                        tools:text="Instant — Common" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvOracleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/text_primary"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="@dimen/margin_small"
                        tools:text="Deal 3 damage to any target." />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvPowerToughness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:visibility="gone"
                        tools:text="3/3" />

                    <!-- 双面牌反面信息 -->
                    <LinearLayout
                        android:id="@+id/llBackFace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:paddingTop="@dimen/margin_medium">

                        <!-- 分隔线 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divider"
                            android:layout_marginBottom="@dimen/margin_medium" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/back_face"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:layout_marginBottom="@dimen/margin_small" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvBackFaceName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="@dimen/margin_small"
                            tools:text="Tamiyo, Seasoned Scholar" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvBackManaCost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="@dimen/margin_small"
                            tools:text="{2}{U}" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvBackTypeLine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="@dimen/margin_small"
                            tools:text="Legendary Creature — Human Wizard" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvBackOracleText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/text_primary"
                            android:lineSpacingExtra="4dp"
                            tools:text="Whenever you cast a historic spell, draw a card." />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Set Info -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/set_info"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/margin_small" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvSetInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/text_secondary"
                        tools:text="LEA (Limited Edition Alpha) — 1/250" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvArtist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="@dimen/margin_small"
                        tools:text="Artist: Christopher Rush" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Legalities -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/legalities"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/margin_small" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvLegalities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Progress Overlay -->
    <FrameLayout
        android:id="@+id/progressOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/md_primary" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="@string/loading"
                android:textSize="@dimen/text_size_normal" />

        </LinearLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
