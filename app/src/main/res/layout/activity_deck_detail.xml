<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.decklist.DeckDetailActivity">

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Action Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/card_background"
                android:elevation="4dp"
                android:padding="8dp"
                android:gravity="center_vertical">

                <!-- Back Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:contentDescription="返回"
                    app:icon="@drawable/ic_arrow_back"
                    app:iconSize="24dp"
                    style="@style/Widget.Material3.Button.IconButton" />

                <!-- Deck Name -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvDeckNameTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="套牌名称"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0" />

                <!-- Favorite Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFavorite"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:contentDescription="收藏"
                    app:icon="@drawable/ic_favorite_border"
                    app:iconSize="24dp"
                    style="@style/Widget.Material3.Button.IconButton" />

                <!-- Export & Share Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExportShare"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:contentDescription="导出和分享"
                    app:icon="@drawable/ic_share"
                    app:iconSize="24dp"
                    style="@style/Widget.Material3.Button.IconButton" />

                <!-- Analysis Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAnalysis"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:contentDescription="套牌分析"
                    app:icon="@drawable/ic_analyze"
                    app:iconSize="24dp"
                    style="@style/Widget.Material3.Button.IconButton" />

            </LinearLayout>

            <!-- Content padding -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <!-- Deck Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/divider"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvEventName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="4dp"
                        tools:text="Modern Challenge" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvFormat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp"
                        tools:text="Format: Modern" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp"
                        tools:text="Date: 2026-01-12" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvPlayer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            tools:text="Player: PlayerName" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvRecord"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            tools:text="5-0" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Tags & Notes Card - Compact Version -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/divider"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Tags Section - Compact -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tags"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:minWidth="40dp" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupTags"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:chipSpacingHorizontal="6dp"
                            app:chipSpacingVertical="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnManageTags"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:contentDescription="@string/manage"
                            app:icon="@android:drawable/ic_input_add"
                            app:iconSize="18dp"
                            style="@style/Widget.Material3.Button.IconButton" />

                    </LinearLayout>

                    <!-- Notes Section - Compact -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="top"
                        android:layout_marginTop="6dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/notes"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:minWidth="40dp"
                            android:gravity="top" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvNotePreview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/no_note"
                            android:textSize="12sp"
                            android:textColor="@color/text_primary"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginEnd="4dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnEditNote"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:contentDescription="@string/edit"
                            app:icon="@android:drawable/ic_menu_edit"
                            app:iconSize="16dp"
                            style="@style/Widget.Material3.Button.IconButton" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Main Deck Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/divider"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Section Header with Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="@color/background_elevated"
                        android:gravity="center_vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvMainboardCount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mainboard"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnToggleMainboard"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            app:icon="@android:drawable/ic_menu_more"
                            app:iconGravity="textStart"
                            app:iconSize="20dp"
                            style="@style/Widget.Material3.Button.IconButton" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llMainDeck"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Sideboard Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/divider"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Section Header with Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="@color/background_elevated"
                        android:gravity="center_vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvSideboardCount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sideboard"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnToggleSideboard"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            app:icon="@android:drawable/ic_menu_more"
                            app:iconGravity="textStart"
                            app:iconSize="20dp"
                            style="@style/Widget.Material3.Button.IconButton" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llSideboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Progress Overlay -->
    <FrameLayout
        android:id="@+id/progressOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            android:background="@color/card_background"
            android:layout_margin="32dp">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/md_primary" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Loading..."
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
