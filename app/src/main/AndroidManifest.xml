<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Internet permission for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />

    <application
        android:name=".DecklistApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MTGODecklistManager"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".ui.decklist.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.decklist.DeckDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.decklist.MainActivity" />

        <activity
            android:name=".ui.carddetail.CardDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.decklist.DeckDetailActivity" />

        <activity
            android:name=".ui.decklist.EventListActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.decklist.MainActivity" />

        <activity
            android:name=".ui.decklist.EventDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.decklist.EventListActivity" />

        <activity
            android:name=".ui.debug.LogViewerActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.decklist.MainActivity" />

    </application>

</manifest>
